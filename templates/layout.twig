{% block header %}
	{% from 'functions.twig' import current_url %}
	{% if uri[0] == 'manager' and not isLogin %}
		{{redirect('/')}}
	{% endif %}
	<!DOCTYPE html>
	<html lang="vi-VN">

		<head>
			<meta name="mobile-web-app-capable" content="yes"/>
			<meta name="apple-mobile-web-app-capable" content="yes"/>
			<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
			<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
			<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no"/>
			<meta name="robots" content="index,follow"/>
			<meta name="googlebot" content="index,follow"/>
			<meta name="google-site-verification" content="{{config('system.app.google-site-verification')}}"/>
			<meta name="theme-color" content="{{config('system.app.theme-color')}}"/>
			<meta name="format-detection" content="telephone=no"/>
			<title>{{title ? (title~' | '~config('system.app.name')) : config('system.app.default-title')}}</title>
			<meta name="description" content="{{description ? description : config('system.app.description')}}"/>
			<link rel="shortcut icon" href="{{config('system.app.icon')}}"/>
			<meta property="og:site_name" content="{{config('system.app.name')}}"/>
			<meta property="og:type" content="website"/>
			<meta property="og:title" content="{{title ? title : config('system.app.default-title') }}"/>
			<meta property="og:description" content="{{description ? description : config('system.app.description')}}"/>
			<meta property="og:image" content="{{config('system.app.icon')}}"/>
			<meta property="twitter:title" content="{{title ? title : config('system.app.default-title')}}"/>
			<meta property="twitter:description" content="{{description ? description : config('system.app.description')}}"/>
			<meta property="twitter:image" content="{{config('system.app.icon')}}"/>
			<meta property="twitter:card" content="summary"/>
			<link rel="dns-prefetch" href="https://cdn.statically.io"/>
			<link rel="dns-prefetch" href="https://cdnjs.cloudflare.com"/>
			<link rel="dns-prefetch" href="https://cdn.jsdelivr.net"/>
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
			<link rel="stylesheet" href="{{url('/assets/css/just-docs.css?v='~'now'|date('U'))}}" type="text/css"/>
			<link rel="stylesheet" href="{{url('/assets/css/ext.css?v='~'now'|date('U'))}}" type="text/css"/>
			<script src="{{url('/assets/js/just-docs.js?t='~'now'|date('U'))}}"></script>
		</head>

		<body>
			<a class="skip-to-main" href="#main-content">Skip to main content</a>
			<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
				<symbol id="svg-link" viewbox="0 0 24 24">
					<title>Link</title>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-link">
						<path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
						<path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
					</svg>
				</symbol>
				<symbol id="svg-search" viewbox="0 0 24 24">
					<title>Search</title>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search">
						<circle cx="11" cy="11" r="8"></circle>
						<line x1="21" y1="21" x2="16.65" y2="16.65"></line>
					</svg>
				</symbol>
				<symbol id="svg-menu" viewbox="0 0 24 24">
					<title>Menu</title>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu">
						<line x1="3" y1="12" x2="21" y2="12"></line>
						<line x1="3" y1="6" x2="21" y2="6"></line>
						<line x1="3" y1="18" x2="21" y2="18"></line>
					</svg>
				</symbol>
				<symbol id="svg-arrow-right" viewbox="0 0 24 24">
					<title>Expand</title>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-right">
						<polyline points="9 18 15 12 9 6"></polyline>
					</svg>
				</symbol>
				<symbol id="svg-doc" viewbox="0 0 24 24">
					<title>Document</title>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file">
						<path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
						<polyline points="13 2 13 9 20 9"></polyline>
					</svg>
				</symbol>
				<symbol id="svg-external-link" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-external-link">
					<title id="svg-external-link-title">(external link)</title>
					<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
					<polyline points="15 3 21 3 21 9"></polyline>
					<line x1="10" y1="14" x2="21" y2="3"></line>
				</symbol>
			</svg>
			<div class="side-bar">
				<div class="site-header">
					<a href="{{url('/')}}" class="site-title lh-tight">
						{{config('system.app.name')}}
					</a>
					<a href="#" id="menu-button" class="site-button">
						<svg viewbox="0 0 24 24" class="icon">
							<use xlink:href="#svg-menu"></use>
						</svg>
					</a>
				</div>
				<nav aria-label="Main" id="site-nav" class="site-nav">
					<ul class="nav-list">
						<li class="nav-list-item active">
							<a href="{{url('/')}}" class="nav-list-link">Trang chủ</a>
						</li>
						{% if totalCategory > 0 %}
							{% for cat in listCategory %}
								<li class="nav-list-item">
									<a href="{{url('/category/'~cat['slug']~'.html')}}" class="nav-list-link">{{cat['title']}}</a>
								</li>
							{% endfor %}
						{% endif %}
						{% if isLogin %}
							<li class="nav-list-item">
								<a href="{{url('/manager')}}" class="nav-list-link">Bảng quản trị</a>
							</li>
						{% endif %}
					</ul>
				</nav>
				<footer class="site-footer">
					{% if isLogin %}
						<a href="{{url('/logout')}}" class="nav-list-link">Đăng xuất</a>
					{% else %}
						<a href="{{url('/login')}}" class="nav-list-link">Đăng nhập</a>
					{% endif %}
				</footer>
			</div>
			<div class="main" id="top">
				<div id="main-header" class="main-header">
					<div class="search">
						<form method="get" action="/search" type="search">
							<div class="search-input-wrap">
								<input name="query" type="search" id="search-input" class="search-input" tabindex="0" placeholder="Search gì cũng được!" aria-label="Search gì cũng được!" value="{{get_get('query')}}" autocomplete="off">
								<label for="search-input" class="search-label">
									<svg viewbox="0 0 24 24" class="search-icon">
										<use xlink:href="#svg-search"></use>
									</svg>
								</label>
							</div>
						</form>
					</div>
				</div>
				<div id="main-content-wrap" class="main-content-wrap">
					<div id="main-content" class="main-content" role="main">
					{% endblock %}

					{% block footer %}
						<hr>
						<footer>
							<p class="text-grey-dk-100 mb-0">
								{{config('system.app.made')}}
								©
								<span style="font-weight:700">{{config('system.app.name')}}</span>. All Right Reserved.
								<a href="#top" id="back-to-top">Back to top</a>
							</p>
						</footer>
					</div>
				</div>
			</div>

			<link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet"/>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/></body>
	</html>
</body></html>{% endblock %}
